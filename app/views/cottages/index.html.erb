<div class="card-trip">
  <% @cottages.each do |cottage| %>
    <img src= />
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to cottage.name, cottage_path(cottage) %></h2>
        <p><%= cottage.description %></p>
      </div>
      <h2 class="card-trip-pricing"><%= cottage.price %>CA$</h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
    <%= link_to "Edit", edit_cottage_path(cottage)  %>
  <% end %>
</div>
