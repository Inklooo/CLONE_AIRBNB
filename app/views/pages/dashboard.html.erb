
<div class="container">
  <div class="title">
    <h1 class="text-center mt-4">Dashboard</h1>
  </div>

  <br>
  <br>

  <div class=" row dashboard-container">

      <div class="col-4 m-5 booking">
          <h2 class="title">Your booking : </h2>
          <div class="booking-list">
              <% @user_bookings.each do |booking| %>
                 <ul class="card">
                      <%= cl_image_tag booking.cottage.photo.first.key, crop: :fill, class: "img"%>
                      <h3 class="title-cottage"><%= link_to booking.cottage.name, booking %></h3>
                      <li class="status">status : <%= booking.status %></li>
                  </ul>
                <% end %>
            </div>
        </div>


        <div class="col-4 m-5 current-request">

              <h2 class="title">Your current requests : </h2>

                <% @bookings.each do |booking| %>
                <% @cottages.each do |cottage| %>


             <% if booking.cottage_id == cottage.id %>

         <% if booking.cottage_id == cottage.id && booking.status == "Pending" %>
          <h2><%= cottage.name %></h2>
          <p><%= cottage.address %></p>
          <div class="d-flex justify-content-between">
            <p class="text-success"> start : <%= booking.start_date %></p>
            <p class= "text-danger"> end : <%= booking.end_date %></p>
          </div>


                <div class="card">
                    <%= cl_image_tag booking.cottage.photos.first.key, crop: :fill, class: "img"%>
                    <h2 class="title-cottage"><%= cottage.name %></h2>
                    <p class ="address"><%= cottage.address %></p>
                  <div class="booking-info justify-content-center">
                    <p class="text-status"> START : <%= booking.start_date %></p>
                    <p class= "text-status"> END : <%= booking.end_date %></p>
                  </div>

                  <div class="d-flex justify-content-between">
                    <%= link_to "Accept", accept_booking_path(booking), class: 'accept-button' %>
                    <%= link_to "Refuse", refuse_booking_path(booking), class:'refuse-button'%>
                  </div>
                </div>
           <% end %>
        <% end %>
      <% end %>

    </div>

  </div>

</div>
